#include "Queue.h"
#include<stdio.h>

Queue::Queue(){
	this->length = 0;
	this->head = NULL;
	this->tail = NULL;
}

Queue::~Queue(){

}
//Push element in Queue
void Queue::push(int data) {
			Node* temp = new Node;
	        temp->data = data;
	        temp->next = NULL;
	        if(isEmpty())
	        {
	            head = temp;
	            tail = temp;
	        }
	        else
	        {
	            prev = tail;
	            tail->next = temp;
	            tail = temp;
	}
	this->length++;
}

// Pop first element in Queue
void Queue::pop() {
	temp = head;
	        head = head->next;
	delete temp;
	this->length--;
}

//Show top-most element in Queue
void Queue::top() {
	tail = this->tail;
	if (tail == NULL) {
		printf("\nThe Queue is empty");

	} else {
		printf("\nTop number is %d", tail->data);
	}
}

// Shows if the Queue is empty
bool Queue::isEmpty() {
	head = this->head;
	if(head == NULL) {
		printf("\nThe Queue is empty");
		return true;

	} else {
		printf("\nThe Queue is not empty");
		return false;
	}
}
