#include <iostream>
#include <stdio.h>
#include "my_h_file.h"

using namespace std;


//int argc is the number of arguments passed with the program
//char* argv[] are the arguments themselves
int main(int argc,char* argv[]) {
	//This is a for loop that prints all the arguments given
	//Note how the first argument (0th element) is the file path for the program
	cout << "The Arguments given were:" << endl;
	for(int i = 0; i<=argc-1; i++){
		cout << argv[i] << endl;
	}





	return 0;
}
