#ifndef STACK_H_
#define STACK_H_
#include <iostream>
#include <cstdlib>
using namespace std;

class Stack_overflow {};
class Stack_underflow {};

class Stack {
    public:
        Stack(int sz) : sz{sz}, top{-1}, elem {new int[sz]} {};
        ~Stack() { delete[] elem; };
        bool empty();
        void push(int* x);
        int* pop();
    private:
        int* elem;
        int top;
        int sz;
};
#endif //STACK_H
