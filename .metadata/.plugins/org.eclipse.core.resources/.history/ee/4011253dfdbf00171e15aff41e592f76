#include<iostream>
#include<stdio.h>
using namespace std;
#include "Stack.h"
// Functions
int menu();

//Main function
int main() {

	Stack* my_stack = new Stack();

    int choice;

    do {
        choice = menu();

        switch(choice) {
            case 1:
                int data;
                cout<<"Enter value to be stored in stack: ";
                cin>>data;
                my_stack->push(head,tail,data);
                break;
            case 2:
                my_stack->pop(head,tail);
                break;
            case 3:
                top(head);
                break;
            case 4:
                printf("Not implemented");
                break;
            case 5:
                isEmpty(head);
                break;
            case -1:
                choice = -1;
                break;

            default: printf("\nEnter a valid choice!!");
        }
    } while(choice != -1);

    return 0;
}

//Menu function
int menu() {
    int ch;
    printf("\nStack");
    printf("\n1.Push\n2.Pop\n3.Top element\n4.Is Full\n5.Is Empty\n6.Exit");
    printf("\nEnter your Choice:");
    scanf("%d",&ch);
    return ch;
}

