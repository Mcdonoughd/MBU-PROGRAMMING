#ifndef STACK_H_
#define STACK_H_
#include <iostream>
#include <cstdlib>
using namespace std;

// Define node pointer
class Node {
public:
    int data;
    Node* next;
};



class Stack{
public:
    int length; //counter for the length of a list
    Node* head; //A pointer to the 1st node

//define the functions to be done on a list

    Stack();
    ~Stack();
    void add(int data);
    void print();
};
// Head and tail pointers
Node* head;
Node* tail;


#endif //STACK_H
