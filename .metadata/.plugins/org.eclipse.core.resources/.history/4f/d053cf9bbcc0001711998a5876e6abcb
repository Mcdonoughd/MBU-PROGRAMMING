/*
 * You're in line to get your house assignments at Hogwarts.
 * Using the Interface, show that you know what is happening in this program,
 * and show what house you belong to.
 *
 */




#include<iostream>
#include<stdio.h>
using namespace std;
#include "Queue.h"
// Forward Reference of Functions
int menu();

//Main function
int main() {

	Queue my_queue;
	my_queue.populate();

    int choice;

    do {
        choice = menu();

        switch(choice) {
            case 1:
            	string d;
                cout<<"Enter value to be stored in stack: ";
                cin>>data;
                my_queue.push(data);
                break;
            case 2:
                my_queue.pop();
                break;
            case 3:
                my_queue.top();
                break;
            case 4:
                my_queue.isEmpty();
                break;
            case -1:
                choice = -1;
                break;

            default: printf("\nEnter a valid choice!!");
        }
    } while(choice != -1);

    return 0;
}

//Menu function for demo
int menu() {
    int ch;
    printf("\nQueue");
    printf("\n1.Push\n2.Pop\n3.Top element\n4.Is Empty\n5.Exit");
    printf("\nEnter your Choice:");
    scanf("%d",&ch);
    return ch;
}



