#include<iostream>
#include<stdio.h>
using namespace std;
#include "Queue.h"
// Forward Reference of Functions
int menu();

//Main function
int main() {

	Stack my_stack;

    int choice;

    do {
        choice = menu();

        switch(choice) {
            case 1:
                int data;
                cout<<"Enter value to be stored in stack: ";
                cin>>data;
                my_stack.push(data);
                break;
            case 2:
                my_stack.pop();
                break;
            case 3:
                my_stack.top();
                break;
            case 4:
                my_stack.isEmpty();
                break;
            case -1:
                choice = -1;
                break;

            default: printf("\nEnter a valid choice!!");
        }
    } while(choice != -1);

    return 0;
}

//Menu function for demo
int menu() {
    int ch;
    printf("\nStack");
    printf("\n1.Push\n2.Pop\n3.Top element\n4.Is Empty\n5.Exit");
    printf("\nEnter your Choice:");
    scanf("%d",&ch);
    return ch;
}



